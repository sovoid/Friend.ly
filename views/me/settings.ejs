<!DOCTYPE html>
<html>
  <%- include('../head') -%>
  <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css">
  <body>
  <%- include('../navbar')	-%>
    <br>
    <div id="mainPage" style="height: 100%;">
      <%- include('../sidebar2') -%>
      <div class="column col-xs-12 col-sm-9 col-lg-10" style="margin:auto" id="main">
        <div class="row">
          <div class="col-md-12">
            <h1>Your settings</h1><br>
            <img style="display: inline; border-radius: 50%; width: 20%" src="<%= user.profile_picture %>" id="pfp"><input id="fileUpload" onchange="upload(this.id)" style="margin-top: 5%;margin-bottom: 5%;width: 70%;display: inline;margin-left: 10%;" type="file" name="file" class="form-control">
            <input type="text" onchange="change(this.value, 'Username')" class="form-control" style="margin-top: 5%" value="<%= user.username %>"  placeholder="Username" disabled>
            <input type="text" onchange="change(this.value, 'First Name')" class="form-control" style="margin-top: 5%; width: 49.5%; display: inline" value="<%= user.name %>" placeholder="=Name">
            <input type="text" onchange="change(this.value, 'Bio')" class="form-control" style="margin-top: 5%" value="<%= user.bio %>" placeholder="Bio">
          </div>
        </div>
      </div>
    </div>

    <%- include('../tabs') %>
    <%- include('../footer') -%>
  </body>
  <script type="text/javascript">
    const id = "<%= user.id %>";
  </script>
    <div id="notify_message" class="notify_message-success">

  </div>
  <script>
    function upload(id) {
      var data = new FormData();
      $.each($(`#${id}`)[0].files, function(i, file) {
        data.append('file-'+i, file);
      });
      $.ajax({
            method: 'POST',
            url: '/api/v1/user/picture?id=' + _id,
            data: data,
            cache: false,
            contentType: false,
            processData: false
        })
      .done(function(data) {
        document.getElementById('pfp').src = data + '?cache=' + Math.random();
          show_notification('Profile picture updated!', 'success')
      })
      .fail(function(data){
          show_notification(data.responseText, 'danger')  
      });
    }
    function change(value, key) {
        $.ajax({
            method: 'POST',
            url: '/api/v1/user/set',
            data: {
                "id":id,
                key: key.toLowerCase().replace(' ', ''),
                value
            }
        })
        .done(function(data){
            show_notification(key + ' changed to ' + value.toString().slice(0, 80), 'success')
        })
        .fail(function(data){
            show_notification(data.responseText, 'error')  
        });
    }

  </script>
  <script type="text/javascript" src="/javascripts/follow.js"></script>
</html>
