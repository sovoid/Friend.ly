<!DOCTYPE html>
<html>
  <%- include('../head') -%>
    <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css">
    <link type="text/css" rel="stylesheet" media="screen" href="/animations/jquery-sakura.min.css" />
  <body>
  <%- include('../navbar')	-%>
    <br>
    <div id="mainPage" style="height: 100%;">
      <%- include('../sidebar2') -%>
      <div class="column col-xs-12 col-sm-9 col-lg-10" style="margin:auto" id="main">
        <div class="row">
          <div class="col-md-6">
            <ul class="list-group">
              <li class="list-group-item active"><strong>Your chats</strong></li>
              <% for(var i=0;i<chattedWith.length;i++) { 
              if(chattedWith[i].id != user.id) {%>
              <li class="list-group-item">
                <img class="logo" src="<%= chattedWith[i].profile_picture %>" alt="">
                <a href="/chat/<%= chattedWith[i].id %>" style="color:black;"><%= chattedWith[i].username %></a>
              </li>
              <% }} %>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class="list-group">
              <li class="list-group-item active"><strong>All Friend.ly Users</strong></li>
              <% for(var i=0;i<users.length;i++) { 
              if(users[i].id != user.id) {%>
              <li class="list-group-item">
                <img class="logo" src="<%= users[i].profile_picture %>" alt="">
                <a href="/chat/<%= users[i].id %>" style="color:black;"><%= users[i].username %></a>
              </li>
              <% }} %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <%- include('../tabs') %>
    <%- include('../footer') -%>
  </body>

</html>
